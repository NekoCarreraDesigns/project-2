{{!--This will be like a user sign in page, after they have created their accounts --}}
<div class="login-wrap">
    <div class="login-html">
        <input id="tab-1" type="radio" name="tab" class="sign-in" checked/><label for="tab-1" class="tab">Sign In</label>
        <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab">Sign Up</label>
        <div class="login-form">
            <form class="sign-in-htm">
                <div class="group">
                    <label for="user">Username</label>
                    <input id="user" type="text" name="user" data-user="user">
                </div>
                <div class="group">
                    <label for="pass">Password</label>
                    <input id="pass" type="password" name="pass" data-pass="password">
                </div>
                <div class="group">
                    <button type="submit" class="btn btn-primary" id="sign-in">Sign In</button>
                </div>
                
            </form>
            <div class="sign-up-htm">
                <form>
                <div>
                    <label for="user" class="label">Username</label>
                    <input id="user" type="text" name="username"/>
                </div>
                <div>
                    <label for="first name">First Name</label>
                    <input type="text" id="fname" name="firstname"/>
                </div>
                <div>
                    <label for="last name">Last Name</label>
                    <input type="text" id="lname" name="lastname"/>
                </div>
                <div>
                    <label for="pass" class="label">Password</label>
                    <input id="pass" type="password" name="password"/>
                </div>
                <div>
                    <button type="submit" class="btn btn-primary" id="signup">Sign Up</button>
                </div>
                
                </form>
            </div>
        </div>
    </div>
</div>
